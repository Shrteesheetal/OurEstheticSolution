<div class="dashboard">
<div class="row">
    <div class="col-md-12">
        <div class="alert alert-success d-none" id="successMessage"></div>
        <div class="alert alert-danger d-none" id="errorMessage"></div>

        <form id="CreateAppointmentForm">
            <div class="row">
                <div class="col-md-4">
                    <input id="AppointmentId" name="id" class="form-control" type="hidden" />
                    <label for="Title" class="control-label">Title</label>
                    <input id="Title" name="title" class="form-control" />
                    <span id="TitleValidation" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label for="CustomerId" class="control-label">Customer ID</label>
                    <input id="CustomerId" name="customerId" class="form-control" />
                    <span id="CustomerValidation" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label for="EmployeeId" class="control-label">Employee ID</label>
                    <input id="EmployeeId" name="employeeId" class="form-control" />
                    <span id="EmployeeValidation" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-4">
                    <label for="ServiceId" class="control-label">Service ID</label>
                    <input id="ServiceId" name="serviceId" class="form-control" />
                    <span id="ServiceValidation" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label for="AppointmentDate" class="control-label">Date</label>
                    <input id="AppointmentDate" name="appointmentDate" class="form-control" type="date" />
                    <span id="DateValidation" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label for="AppointmentTime" class="control-label">Appointment Time</label>
                    <div class="time-picker-group">
                        <input type="time" id="AppointmentTime" name="appointmentTime" class="form-control form-control-with-icon" />
                        <i class="bi bi-clock"></i> 
                    </div>
                    <span id="AppointmentTimeValidation" class="text-danger"></span>
                </div>


                <div class="col-md-4">
                    <label for="CreatedBy" class="control-label">Created By</label>
                    <input id="CreatedBy" name="createdBy" class="form-control" type="text" />
                    <span id="CreatedByValidation" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-4 d-flex align-items-end">
                    <div class="form-group">
                        <input type="submit" value="Save" id="CreateAppointment" class="btn btn-primary" />
                        <input type="submit" value="Update" id="UpdateAppointment" class="btn btn-primary" />
                        <input type="reset" value="Reset" class="btn btn-dark" />
                    </div>
                </div>
            </div>

           
        </form>
    </div>
   

    <div class="col-md-12 mt-5">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Customer</th>
                    <th>Employee</th>
                    <th>Service</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Created By</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="appointmentTableBody"></tbody>
        </table>
    </div>
</div>
</div>  `

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-describedby="deleteModalDesc" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="text" id="DeleteAppointmentId"  />
                <h3 id="deleteModalDesc">Are you sure you want to delete this appointment?</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteAppointment" data-bs-dismiss="modal">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>



<script src="~/lib/jquery/dist/jquery.min.js"></script>

@section Scripts {
    <script src="~/js/appointment.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
