

@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">

        <div class="alert alert-success d-none" id="successMessage"></div>
        <div class="alert alert-danger d-none" id="errorMessage"></div>

        <form id="CreateProductForm">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <input id="ProductId" name="id" class="form-control" type="text" />
                        <label for="Name" class="control-label">Product Name</label>
                        <input id="Name" name="name" class="form-control" />
                        <span id="NameValidation" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Description" class="control-label">Description</label>
                        <input id="Description" name="description" class="form-control" />
                        <span id="DescriptionValidation" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label for="ExpiryDate" class="control-label">Expiry Date</label>
                        <input id="ExpiryDate" name="expiryDate" type="date" class="form-control" />
                        <span id="ExpiryDateValidation" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="ManufacturedBy" class="control-label">Manufactured By</label>
                        <input id="ManufacturedBy" name="manufacturedBy" class="form-control" />
                        <span id="ManufacturedByValidation" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Name" class="control-label">Service Name</label>
                        <select id="Name" name="name" class="form-control" required>
                            <option value="">-- SelectService --</option>
                            @foreach (var serviceVm  in ViewBag.ServiceDropDown)
                            {
                                <option value="@serviceVm.Id">@serviceVm.Name</option>
                            }
                        </select>
                       
                    </div>
                </div>


                <div class="col-md-4 d-flex align-items-end">
                    <div class="form-group">
                        <input type="submit" value="Save" id="CreateProduct" class="btn btn-primary" />
                        <input type="submit" value="Update" id="UpdateProduct" class="btn btn-primary" />
                        <input type="reset" value="Reset" class="btn btn-dark" />
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-12 mt-5">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>ProductName</th>
                    <th>Description</th>
                    <th>Expiry Date</th>
                    <th>ManufacturedBy</th>
                    <th>ServiceID</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="productTableBody"></tbody>
        </table>
    </div>
</div>


<div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-describedby="deleteModalDesc" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="text" id="DeleteProdId" />
                <h3 id="deleteModalDesc">Are you sure you want to delete this item?</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteProduct" data-bs-dismiss="modal">Yes, Delete</button>
            </div>
        </div>
    </div>

</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
@section Scripts {
    <script src="~/js/product.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

