<style>
    .file-upload {
        background-color: #f8f9fa;
        width: 100%;
        padding: 20px;
        position: relative;
        border: 2px dashed #ced4da;
        border-radius: 10px;
        text-align: center;
        transition: all 0.3s ease-in-out;
    }

        .file-upload:hover {
            background-color: #f1f3f5;
            border-color: #0d6efd;
        }

    .image-upload-wrap {
        margin-top: 20px;
        position: relative;
    }

        .image-upload-wrap:hover {
            background-color: #f8f9fa;
            cursor: pointer;
        }

        .image-upload-wrap h3 {
            font-size: 16px;
            color: #6c757d;
            font-weight: 400;
            margin: 20px 0;
        }

    .file-upload-input {
        position: absolute;
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        outline: none;
        opacity: 0;
        cursor: pointer;
    }

    .file-upload-content {
        display: none;
        text-align: center;
        margin-top: 20px;
    }

    .file-upload-image {
        max-height: 300px;
        width: auto;
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        margin-bottom: 20px;
        object-fit: cover;
    }

    .image-title-wrap {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

    .remove-image {
        border: none;
        background: #dc3545;
        color: #fff;
        padding: 10px 16px;
        font-size: 14px;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .remove-image:hover {
            background-color: #bb2d3b;
        }

    .image-dropping {
        border-color: #0d6efd;
        background-color: #e9f5ff;
    }

</style>
