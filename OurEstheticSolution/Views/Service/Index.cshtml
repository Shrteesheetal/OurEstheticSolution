@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/service.js"></script>
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    var $wrapper = $(input).closest('.file-upload');
                    $wrapper.find('.image-upload-wrap').hide();
                    $wrapper.find('.file-upload-image').attr('src', e.target.result);
                    $wrapper.find('.file-upload-content').show();
                    $wrapper.find('.image-title').html(input.files[0].name);
                };

                reader.readAsDataURL(input.files[0]);
            } else {
                removeUpload(input);
            }
        }

        function removeUpload(button) {
            var $wrapper = $(button).closest('.file-upload');
            var $input = $wrapper.find('.file-upload-input');

            $input.replaceWith($input.clone()); // Clear input
            $wrapper.find('.file-upload-content').hide();
            $wrapper.find('.image-upload-wrap').show();
        }

        // Optional drag styles
        $(document).on('dragover', '.image-upload-wrap', function (e) {
            e.preventDefault();
            e.stopPropagation();
            $(this).addClass('image-dropping');
        });

        $(document).on('dragleave dragend drop', '.image-upload-wrap', function (e) {
            e.preventDefault();
            e.stopPropagation();
            $(this).removeClass('image-dropping');
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")


