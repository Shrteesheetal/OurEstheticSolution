<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - OurEstheticSolution</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/stylesheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OurEstheticSolution.styles.css" asp-append-version="true" />
   

    <style>
      section{
            font-family: Arial, sans-serif;
            background-color: #154c79;
        }

       /*  .container{
            background-color:cadetblue;
            display:flex;
        } */
        /* Enable dropdown on hover */
        .dropdown:hover .dropdown-menu {
            display: block;
            margin-top: 0; /* Optional for smooth effect */
        }

        .navbar-bg {
           background-color: #f8f9fa; /* Example background */
        }

        .hero {
            background-size: cover;
            background-position: center;
            padding: 60px 0;
            background-color: #154c79;
        }

            .hero .hero-content {
                color: #154c79;
                padding: 20px;
            }

        .input-wrapper {
            position: relative;
        }

            .input-wrapper ion-icon {
                position: absolute;
                right: 10px;
                top: 50%;
                transform: translateY(-50%);
            }

        .btn.has-before {
            margin-left: 10px;
        }

    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light shadow-sm py-3 navbar-bg">
            <div class="container">
                <!-- Logo -->
                <a href="#" class="navbar-brand d-flex align-items-center">
                    <img src="~/images/BLogo.png" width="80px" height="70px" alt="Logo" class="me-2" />
                </a>

                <!-- Toggler for mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav links -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold" asp-controller="Home" asp-action="Admin">Admin</a>
                            </li>
                        }

                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold" asp-controller="Home" asp-action="User">User</a>
                            </li>
                        }

                        <!-- Hover Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark fw-semibold" href="#" id="dropdownHover" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Employee
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownHover" id="dropdoenlabelemp"> </ul>
                        
                        </li>
                         <!-- Hover Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark fw-semibold" href="#" id="dropdownHover" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                              Service
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownHover" id="dropdoenlabelservice"> </ul>
                              

                              @*   <li><a class="dropdown-item" asp-controller="Employee" asp-action="Index">Employee</a></li>
                                <li><a class="dropdown-item" href="#">Employee 1</a></li>
                                <li><a class="dropdown-item" href="#">Employee 2</a></li>
                                <li><a class="dropdown-item" href="#">Employee 3</a></li> *@
                           

                        </li>

                      
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" asp-controller="Appointment" asp-action="Index">Appointments</a>
                        </li>
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
       

    </header>

   
    @RenderBody()
 
    <!-- Footer -->
    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - OurEstheticSolution -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/dashboard.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Ionicons CDN (optional, or install locally) -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>
